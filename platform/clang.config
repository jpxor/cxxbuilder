TARGET:
win64

INC_PREFIX:
-I

LIB_PREFIX:
-l

BIN_SUFFIX:
.exe

CXXFLAGS:
-std=c++14 -Wall -pthread

LDFLAGS:
-Wl,-NODEFAULTLIB:LIBCMT

LIBS:
gdi32.lib
kernel32.lib
user32.lib
shell32.lib
MSVCRT.lib

COMPILER:
clang++ -c {CXXFLAGS} -o {OBJ_PATH} {INCLUDE_DIRS} {SRC_PATH}

LINKER:
clang++ -o {BIN_DIR}/{TARGET}/{BIN}{BIN_SUFFIX} {OBJ_FILES} {LIBS} {LDFLAGS}
